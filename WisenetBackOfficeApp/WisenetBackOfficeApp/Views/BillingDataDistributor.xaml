<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:WisenetBackOfficeApp.Translations;assembly=WisenetBackOfficeApp"
             x:Class="WisenetBackOfficeApp.Views.BillingDataDistributor"
             BackgroundImage="{StaticResource BACKGROUND_BLACK_TEXTURE}">

    <ContentView x:Name="contentView" Padding="0,0,0,0" ControlTemplate="{StaticResource BarOrange}">
        <ScrollView>
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center">

                <StackLayout Orientation="Horizontal" HeightRequest="30" BackgroundColor="#444444" Padding="5">
                    <Label TextColor="#FFFFFF" Text="{i18n:Translate BillingDataDistributorTitle}" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"  VerticalTextAlignment="Center"
				           HorizontalTextAlignment="Center"	FontSize="16"/>

                </StackLayout>

                <Image HorizontalOptions="Center" Source="{StaticResource imageContact}"/>

                <Label Text="{ Binding Distributor.Calificacion }" FontSize="16" VerticalOptions="Center" TextColor="#ffffff" FontAttributes="Bold"
				       HorizontalOptions="Center" HorizontalTextAlignment="Center" />

                <Label Text="{ Binding Distributor.NombreCompleto }" FontSize="16" VerticalOptions="Center" TextColor="#ffffff"
				       FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>

                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Grid Padding="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="1" Text="{ Binding Distributor.IdDistributor }" FontSize="15" VerticalOptions="Center"
					           TextColor="#ffffff" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontAttributes="Bold" BackgroundColor="#ff6624"/>
                    </Grid>
                </StackLayout>

                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="10,0,0,0" >

                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>


                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="25"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <BoxView BackgroundColor="#444444" Grid.Row ="0" Grid.RowSpan="3" Grid.ColumnSpan="3" Opacity="0.2"/>
                        <BoxView BackgroundColor="Gray" Grid.Row="2" Grid.ColumnSpan="3"/>

                        <BoxView BackgroundColor="#444444" Grid.Row="3" Grid.RowSpan="3" Grid.ColumnSpan="3" Opacity="0.2"/>
                        <BoxView BackgroundColor="Gray" Grid.Row="5" Grid.ColumnSpan="3"/>

                        <BoxView BackgroundColor="#444444" Grid.Row="6" Grid.RowSpan="3" Grid.ColumnSpan="3" Opacity="0.2"/>
                        <BoxView BackgroundColor="Gray" Grid.Row="8" Grid.ColumnSpan="3"/>

                        <BoxView BackgroundColor="#444444" Grid.Row="9" Grid.RowSpan="3" Grid.ColumnSpan="3" Opacity="0.2"/>
                        <BoxView BackgroundColor="Gray" Grid.Row="11" Grid.ColumnSpan="3"/>

                        <BoxView BackgroundColor="#444444" Grid.Row="12" Grid.RowSpan="3" Grid.ColumnSpan="3" Opacity="0.2"/>
                        <BoxView BackgroundColor="Gray" Grid.Row="14" Grid.ColumnSpan="3"/>

                        <BoxView BackgroundColor="#444444" Grid.Row="15" Grid.RowSpan="3" Grid.ColumnSpan="3" Opacity="0.2"/>
                        <BoxView Grid.Row="17" Grid.ColumnSpan="3"/>



                        <Label  Grid.Row="0"  Grid.ColumnSpan="3" Text="{ Binding Distributor.Direccion }" Font="13" 
								VerticalOptions="Center" HorizontalOptions="Start" TextColor="#ffffff" VerticalTextAlignment="Start" HorizontalTextAlignment="Start"/>


                        <Label  Grid.Row="1" Grid.ColumnSpan="3" Text="{i18n:Translate BillingDataDistributorLabelAdrress}" Font="9" VerticalOptions="Center" HorizontalOptions="Start"
								TextColor="#ffc581" VerticalTextAlignment="Start" HorizontalTextAlignment="Start"/>


                        <Label  Grid.Row="3"  Grid.ColumnSpan="3" Text="{ Binding Distributor.CodigoPostal }" Font="13"  VerticalOptions="Center"
								HorizontalOptions="Start" TextColor="#ffffff" VerticalTextAlignment="Start" HorizontalTextAlignment="Start" />


                        <Label  Grid.Row="4"  Grid.ColumnSpan="3" Text="{i18n:Translate BillingDataDistributorLabelZipCode}" Font="9"  VerticalOptions="Center"
								HorizontalOptions="Start" TextColor="#ffc581" VerticalTextAlignment="Start" HorizontalTextAlignment="Start"/>


                        <Label  Grid.Row="6"  Grid.ColumnSpan="3" Text="{ Binding Distributor.Ciudad }" Font="13"  VerticalOptions="Center"
								HorizontalOptions="Start" TextColor="#ffffff" VerticalTextAlignment="Start" HorizontalTextAlignment="Start" />


                        <Label  Grid.Row="7"  Grid.ColumnSpan="3" Text="{i18n:Translate BillingDataDistributorLabelCity}" Font="9"  VerticalOptions="Center" HorizontalOptions="Start" 
                                TextColor="#ffc581" VerticalTextAlignment="Start" HorizontalTextAlignment="Start"/>


                        <Label  Grid.Row="9"  Grid.ColumnSpan="3" Text="{ Binding EstadoPais }" Font="13"  VerticalOptions="Center" HorizontalOptions="Start"
								TextColor="#ffffff" VerticalTextAlignment="Start" HorizontalTextAlignment="Start" />


                        <Label  Grid.Row="10"  Grid.ColumnSpan="3" Text="{i18n:Translate BillingDataDistributorLabelStateCountry}" Font="9" VerticalOptions="Center" HorizontalOptions="Start"
								TextColor="#ffc581" VerticalTextAlignment="Start" HorizontalTextAlignment="Start"/>


                        <Label  Grid.Row="12"  Grid.ColumnSpan="3" Text="{ Binding Telefonos }" Font="13"  VerticalOptions="Center" HorizontalOptions="Start"
								TextColor="#ffffff" VerticalTextAlignment="Start" HorizontalTextAlignment="Start"/>


                        <Label  Grid.Row="13"  Grid.ColumnSpan="3" Text="{i18n:Translate BillingDataDistributorLabelMovilPhoneFax}" Font="9"  VerticalOptions="Center"
								HorizontalOptions="Start" TextColor="#ffc581" VerticalTextAlignment="Start" HorizontalTextAlignment="Start" />

                        <Label  Grid.Row="15"  Grid.ColumnSpan="3" Text="{ Binding Distributor.Email }" Font="13"  VerticalOptions="Center" HorizontalOptions="Start"
								TextColor="#ffffff" VerticalTextAlignment="Start" HorizontalTextAlignment="Start"/>


                        <Label  Grid.Row="16"  Grid.ColumnSpan="3" Text="{i18n:Translate BillingDataDistributorLabelEmail}" Font="9"  VerticalOptions="Center"
								HorizontalOptions="Start" TextColor="#ffc581" VerticalTextAlignment="Start" HorizontalTextAlignment="Start" />


                    </Grid>


                </StackLayout>

            </StackLayout>

        </ScrollView>
    </ContentView>
    
</ContentPage>