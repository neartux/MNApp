    <StackLayout Padding="0,70,0,0" Spacing="10">

        <Image Source="fgv_logo.png" />

        <StackLayout Padding="0,70,0,0" Spacing="10">
            <Entry Text="{Binding User.UserName }" Placeholder="Usuario" TextColor="White"/>
        </StackLayout>

        <StackLayout Padding="0,30,0,0" Spacing="10">
            <Entry IsPassword="True" Text="{Binding User.Password}" Placeholder="Password" TextColor="White"/>
        </StackLayout>

        <StackLayout Padding="0,50,0,0" Spacing="10">
            <Button Text="Login" x:Name="ButtonLogin" Command="{Binding DoLoginCommand} "
            BackgroundColor="#000000" FontAttributes="Bold" HorizontalOptions="Center"
            TextColor="White"
            IsVisible="{Binding !IsLoading, Mode=OneWay}"/>
        </StackLayout>

        <StackLayout>
            <ActivityIndicator IsRunning="{Binding IsLoading, Mode=OneWay}"/>
        </StackLayout>

    </StackLayout>
    
